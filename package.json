{
  "author": "Sergio Cruz",
  "name": "react-connect4",
  "version": "0.1.0",
  "description": "Connect 4 game implemented in React",
  "main": "app/client.js",
  "scripts": {
    "test": "jest",
    "test-debug": "node-debug --nodejs --harmony ./node_modules/jest-cli/bin/jest.js --runInBand"
  },
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.1.3",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel": "^5.8.12",
    "babel-jest": "^5.3.0",
    "babelify": "^6.1.3",
    "browser-sync": "^2.8.0",
    "browserify": "^11.0.0",
    "eslint": "^1.0.0",
    "eslint-plugin-react": "^3.1.0",
    "exorcist": "^0.4.0",
    "gulp": "^3.9.0",
    "gulp-sass": "^2.0.4",
    "gulp-util": "^3.0.6",
    "jest-cli": "facebook/jest#0.5.x",
    "reactify": "^1.1.1",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.3.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageOnlyFrom": {
      "app/components/app.js": true,
      "app/components/connect-4/board.js": true
    },
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "unmockedModulePathPatterns": [
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sergiocruz/react-connect4.git"
  },
  "engines": {
    "iojs": "2.5.x",
    "npm": "2.13.x"
  }
}
